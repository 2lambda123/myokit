



[[script]]
import matplotlib.pyplot as pl
import numpy as np
import myokit

m, p, x = myokit.load('lr-1991.mmt')
n = 64
s = myokit.SimulationOpenCL(m, p, ncells=n)
d = s.run(600)
b = d.block1d()

x,y,z = b.grid('membrane.V')
f = pl.figure()
pl.pcolormesh(x,y,z)
pl.grid(False)
pl.xlim(0, np.max(d['engine.time']))
pl.ylim(0, n - 1)
pl.colorbar()
pl.tight_layout()
pl.show()

